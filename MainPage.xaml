<Page
    x:Class="AccountingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:AccountingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    media:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Grid>
        <media:NavigationView x:Name="MainNav" SelectionChanged="Main_SelectionChanged">
            <media:NavigationView.MenuItems>
                <media:NavigationViewItem Content="Home" Icon="Home"/>
                <media:NavigationViewItem Content="List" Icon="List"/>
            </media:NavigationView.MenuItems>

            <Frame x:Name="MainFrame" Tag="HomePage" Loaded="MainFrame_Loaded"/>
        </media:NavigationView>
    </Grid>
</Page>